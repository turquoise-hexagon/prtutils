#!/bin/bash
#
# prtversion - compare local versions with versions from repology

display() {
    declare -n tmp=$1

    for msg in "${tmp[@]}"; {
        echo "$msg"
    }
}

(($#)) || {
    echo "usage : ${0##*/} [repo]" >&2
    exit 1
}

# build a list of packages
while read -r pkg ver path; do
    [[ $ver == git ]] ||
        for repo; {
            [[ $path =~ /$repo$ ]] && {
                tmp_pkg+=("$pkg")
                tmp_ver+=("$ver")
            }
        }
done < <(prt-get printf '%n %v %p\n')

while read -r line; do
    # parse svgs
    [[ ${line##*middle\">} =~ ([^<, ]+) ]]

    var=${BASH_REMATCH[1]}
    pkg=${tmp_pkg[i]}
    cur=${tmp_ver[i]}
    ((i++))

    case $var in
        -) n_ver+=("$pkg : $cur -> $var");;
        $cur) ;; # do nothing
        *) y_ver+=("$pkg : $cur -> $var")
    esac
done < <(
    curl -w '\n' -s $(
        # build a list of urls
        printf 'https://repology.org/badge/latest-versions/%s.svg?header= ' "${tmp_pkg[@]}"
    ))

display y_ver
display n_ver
